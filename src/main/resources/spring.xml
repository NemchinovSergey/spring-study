<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- создаём бин через конструктор по-умолчанию, самый простой вариант -->
    <bean id="eventLogger" class="ru.nemchinovsergey.spring.loggers.ConsoleEventLogger"/>

    <!-- создаём бин используя передачу параметров в конструктор (с указанием индекса параметра и без) -->
    <bean id="client" class="ru.nemchinovsergey.spring.beans.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <!-- создаём бин используя передачу ссылок в конструктор уже созданных объектов -->
    <bean id="app" class="ru.nemchinovsergey.spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <!-- создаём бин используя внутренний бит, для получения даты -->
    <bean id="event" class="ru.nemchinovsergey.spring.beans.Event" scope="prototype">
        <!-- внутренний бин создаётся каждый раз заново -->
        <constructor-arg><bean class="java.util.Date"/></constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <!-- создаём бин с форматом даты -->
    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

</beans>